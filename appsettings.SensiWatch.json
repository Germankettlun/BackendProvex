{
  // Configuración para SensiWatch API Integration
  // Agregar esta sección al appsettings.json principal
  
  "SensiWatch": {
    "BaseUrl": "https://developer.api.sensiwatch.com",
    "TokenEndpoint": "/external-auth/connect/token",
    "TripsEndpoint": "/external/trip-api-manage/v1/Programs",
    "SubscriptionKey": "", // Reemplazar con la clave de suscripción real
    "Username": "", // Usuario de SensiWatch (no el del portal)
    "Password": "", // Contraseña de SensiWatch
    "ClientId": "SWPExternal",
    "ClientSecret": "SensitechExternal!",
    "Scope": "apiExternal",
    "TimeoutSeconds": 30,
    "ProgramId": 0 // Reemplazar con el ID del programa real
  },

  // Configuración de logging específica para SensiWatch
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "ProvexApi.Services.SensiWatch": "Information",
      "ProvexApi.Controllers.SensiWatch": "Information"
    }
  },

  // Variables de entorno recomendadas para producción:
  // SENSIWATCH__SUBSCRIPTIONKEY=your_subscription_key
  // SENSIWATCH__USERNAME=your_username
  // SENSIWATCH__PASSWORD=your_password
  // SENSIWATCH__PROGRAMID=your_program_id

  // Configuración de autenticación para endpoints push
  "SensiWatchPush": {
    "AuthenticationEnabled": true,
    "BasicAuthCredentials": "sensitech:secreto123", // Cambiar en producción
    "AllowedIPs": ["20.124.145.167"], // IP de SensiWatch
    "MaxRequestSizeBytes": 1048576 // 1MB
  }
}